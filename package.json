{
  "name": "cpapp",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap-cloud-sdk/connectivity": "^2.5.0",
    "@sap-cloud-sdk/http-client": "^2.5.0",
    "@sap-cloud-sdk/odata-v2": "^2.5.0",
    "@sap-cloud-sdk/odata-v4": "^2.5.0",
    "@sap/cds": ">=5",
    "@sap/cds-odata-v2-adapter-proxy": "^1.9.0",
    "@sap/hana-client": "^2.8.22",
    "@sap/xsenv": "^3.3.2",
    "@sap/xssec": "^3.2.13",
    "express": "^4",
    "generator-easy-ui5": "^3.0.1",
    "hdb": "^0.19.0",
    "passport": "^0.4.1"
  },
  "devDependencies": {
    "@sap-cloud-sdk/generator": "^2.5.0",
    "@sap/ux-specification": "^1.102.1",
    "sqlite3": "^5.0.4"
  },
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "cds run"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "sapux": [
    "app/risks"
  ],
  "cds": {
    "requires": {
      "db": {
        "kind": "sql"
      },
      "uaa": {
        "kind": "xsuaa",
        "credentials": {}
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  }
}
